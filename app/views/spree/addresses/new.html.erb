<% content_for :head do %>
  <%= javascript_include_tag states_url(:format => :js) %>
  <%= javascript_include_tag countries_url(:format => :js) %>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @address } %>
<%= form_for @address, :html => {:id => "checkout_form_address"} do |f| %>
<fieldset>
  <%= content_tag(:legend, t(:new_shipping_address, :scope => :address_book)) %>
  <div class="inner">
    <%= render :partial => 'spree/addresses/form', :locals => {
      :address_name => 'address',
      :address_form => f,
      :address_type => 'shipping',
      :address => @address
    } %>
  </div>
  <%= f.submit t(:save, :scope => :address_book) %>
  <%= link_to t(:cancel, :scope => :address_book), account_path %>
</fieldset>
<% end %>
